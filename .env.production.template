# 프로덕션 환경 설정 파일
# 주의: 보안을 위해 모든 중요 키와 비밀은 환경 변수 또는 시크릿 관리자를 통해 주입하는 것이 좋습니다

# Django 기본 설정
DEBUG=False
DJANGO_SECRET_KEY=django-insecure-CHANGE_TO_SECURE_RANDOM_VALUE_IN_PRODUCTION
ALLOWED_HOSTS=example.com,www.example.com,api.example.com

# API 키 설정 (실제 값으로 교체 필요)
API_KEY=change-to-secure-api-key

# Google OAuth 설정 (실제 값으로 교체 필요)
GOOGLE_CLIENT_ID=your-production-google-client-id
GOOGLE_CLIENT_SECRET=your-production-google-client-secret

# Groq API 설정 (실제 값으로 교체 필요)
GROQ_API_KEY=your-production-groq-api-key

# CSRF 및 보안 설정 (프로덕션 환경에 최적화)
CSRF_USE_SESSIONS=True
CSRF_COOKIE_HTTPONLY=True
CSRF_COOKIE_SECURE=True
CSRF_COOKIE_SAMESITE=Lax
CSRF_TRUSTED_ORIGINS=https://example.com,https://www.example.com

# CORS 설정 (프로덕션 환경에 최적화)
CORS_ALLOW_ALL_ORIGINS=False
CORS_ALLOWED_ORIGINS=https://example.com,https://www.example.com

# 미들웨어 설정
ENABLE_CSRF_MIDDLEWARE=True

# 로깅 레벨 설정
LOG_LEVEL=INFO

# Selenium WebDriver 설정
SELENIUM_DRIVER_EXECUTABLE_PATH=/usr/bin/chromedriver 